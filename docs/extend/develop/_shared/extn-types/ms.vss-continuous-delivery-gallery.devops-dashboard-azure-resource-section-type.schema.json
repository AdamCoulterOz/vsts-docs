{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "uri": {
            "type": "string"
        },
        "resourceProviders": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "apiVersion": {
                        "type": "string"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "apiVersion"
                ]
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "description",
        "uri",
        "resourceProviders"
    ]
}